<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.travel.seoul.mapper.ProductPathMapper">
    <insert id="pathinsert" parameterType="com.travel.seoul.vo.ProductPathVO">
        insert into prouctpathdb(pp_name, pp_path) values (#{pp_name}, #{pp_path})
    </insert>
    
    <select id="pathlist" resultType="com.travel.seoul.vo.ProductPathVO">
        select * from prouctpathdb
    </select>
    <select id="findBypathName" resultType="com.travel.seoul.vo.ProductPathVO">
 		select * from prouctpathdb	where pp_name = #{pp_name}
 	</select>
 	<update id="pathupdate" parameterType="com.travel.seoul.vo.ProductPathVO">
	    update prouctpathdb set 
	    pp_name=#{pp_name}, pp_path=#{pp_path}
	    where pp_num=#{pp_num}
	</update>
    <delete id="pathnameDelete" parameterType="com.travel.seoul.vo.ProductPathVO">
	    delete from prouctpathdb where pp_name = #{pp_name}
	</delete>
</mapper>
